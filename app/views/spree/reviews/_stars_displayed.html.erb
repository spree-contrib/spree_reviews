<% if defined? edit_enabled
    state = ''
    name  = 'review[rating]'
  else
    state = 'disabled'
    name  = defined?(review).nil? ? Time.now.tv_usec.to_s : "review_#{review}"
  end %>

  <div class="rate-area">
    <% for i in (1..Spree::Reviews::Config.stars).reverse_each %>
    <div class="star-box">
      <input name="<%= name %>"
             type="radio"
             id="<%= i %>-star"
             value="<%= pluralize(i, 'stars') %>" <%= state %>
             <%= 'checked' if i == stars %> />
             <label for="<%= i %>-star"></label>
      </div>
    <% end %>
  </div>
