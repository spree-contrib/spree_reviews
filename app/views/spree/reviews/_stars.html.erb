<% if defined? edit_enabled 
    state = "" 
    name  = "review[rating]" 
  else  
    state = 'disabled="disabled"' 
    name  = defined?(review).nil? ? Time.now.tv_usec.to_s : "review_#{review}" 
  end %>
<% for i in 1..NB_STARS %>
  <input name="<%= name %>" 
         type="radio" class="star" 
         value="<%= t('star', :count => i) %>" <%= state %> 
         <% if i==stars  %> checked="checked" <% end %> />
<% end %>
