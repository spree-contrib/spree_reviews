<% render 'spree/admin/shared/product_sub_menu' %>
<h1><%= t(:editing_review_for) %> <%= link_to @review.product.name, product_path(@review.product) %></h1>

<% unless @review.title.blank? %>
<h2><%= @review.title %></h2>
<% end %>

<p>
<%= simple_format(@review.review) %>
</p>

<h2><%= t(:edited_version) %></h2>

<%= form_for([:admin, @review]) do |f| %>
  <%= render :partial => 'form', :locals  => { :f => f } %>
  <p class="form-buttons">
    <%= button t(:update) %> <%= t(:or) %> <%= link_to t(:back_reviews), admin_reviews_path %>
  </p>
<% end %>
